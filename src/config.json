{
  "clientURL": "https://icjia.illinois.gov",
  "publicPath": "/gata",
  "base": "gata",

  "search": {
    "shouldSort": true,
    "threshold": 0.8,
    "location": 0,
    "distance": 100,
    "maxPatternLength": 32,
    "minMatchCharLength": 3,
    "keys": ["searchMeta", "title", "summary", "name", "slug"]
  },

  "debug": true,

  "markdownItOptions": {
    "html": true,
    "xhtmlOut": false,
    "breaks": false,
    "langPrefix": "language-",
    "linkify": true,
    "typographer": false,
    "quotes": "“”‘’"
  },

  "archiveBaseURL": "https://archive.icjia.cloud",
  "markdownSourcePath": "./src/markdown/",
  "staticAssetPath": "/public",
  "jsonDestinationPath": "./api/",
  "dateFormat": "MMMM DD, YYYY",
  "dateFields": ["posted", "created", "expires", "updated"],
  "siteConfig": {
    "pages": {
      "parentPath": "/",
      "type": "page",
      "sortOn": "position",
      "filename": "pages.json"
    },
    "funding": {
      "parentPath": "/funding/",
      "type": "funding",
      "sortOn": "expires",
      "filename": "funding.json"
    },
    "news": {
      "parentPath": "/news/",
      "type": "news",
      "sortOn": "posted",
      "filename": "news.json"
    }
  }
}
